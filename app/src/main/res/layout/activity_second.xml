<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_second"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.zaki.smarttubbles.SecondActivity"
    android:background="#26A69A">

    <ImageView
        android:id="@+id/imageUser"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/account" />

    <TextView
        android:id="@+id/textWellcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageUser"
        android:layout_centerHorizontal="true"
        android:text="Welcome"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textWellcome"
        android:layout_centerHorizontal="true"
        android:text="User"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/TextOurService"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageUser"
        android:layout_alignStart="@+id/imageUser"
        android:layout_centerVertical="true"
        android:text="Our Service"
        android:textSize="20sp" />
    <TextView
        android:id="@+id/texttambal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tambal"
        android:layout_alignStart="@+id/tambal"
        android:layout_below="@+id/tambal"
        android:text="Tambal Ban"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/textservislengkap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/user"
        android:layout_alignStart="@+id/user"
        android:layout_below="@+id/servislengkap"
        android:text="Service"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/texttubbles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tubbles"
        android:layout_alignStart="@+id/tubbles"
        android:layout_below="@+id/tubbles"
        android:text="Tubbles"
        android:textSize="17sp" />

    <ImageView
        android:id="@+id/tambal"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/servislengkap"
        android:layout_marginLeft="26dp"
        android:layout_marginStart="26dp"
        android:src="@drawable/tire" />

    <ImageView
        android:id="@+id/servislengkap"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignEnd="@+id/textWellcome"
        android:layout_alignRight="@+id/textWellcome"
        android:layout_below="@+id/TextOurService"
        android:layout_marginTop="19dp"
        android:src="@drawable/tools" />

    <ImageView
        android:id="@+id/tubbles"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/servislengkap"
        android:layout_marginEnd="22dp"
        android:layout_marginRight="22dp"
        android:src="@drawable/wheel" />
</RelativeLayout>
